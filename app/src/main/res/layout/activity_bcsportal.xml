<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDF1F7"
    tools:context=".Bcsportal">



    <LinearLayout
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textLogo"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BCS Portal" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textTitle"
        android:textColor="#17103E"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All BCS info" />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:id="@+id/textSubTitle"
        android:textColor="#B4BAC3"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need internet connect to see posts." />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/gj">


    </ImageView>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="btnSyl">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/gj"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >

            </ImageView>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"

                android:id="@+id/textItemOne"
                android:textColor="#1C1C1C"
                android:textSize="13sp"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/Bcssyl" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="btnCad">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/gj"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >

            </ImageView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:id="@+id/textItemTwo"
                android:textColor="#1C1C1C"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/cadrelist" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="btnMot">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/gj"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >

            </ImageView>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/textItemThree"
                android:textColor="#1C1C1C"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="@string/moti"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="btnHome">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/gj"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >

            </ImageView>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/textItemFour"
                android:textColor="#1C1C1C"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:text="You need internet connection to see job posts."
        android:textColor="#2B2B2B"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


</LinearLayout>